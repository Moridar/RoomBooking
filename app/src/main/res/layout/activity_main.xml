<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bobbie.roombooking.MainActivity">

    <Button
        android:text="Ny reservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_create"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Vis kalender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_create"
        android:id="@+id/button_view"
        android:layout_alignRight="@+id/button_create"
        android:layout_alignEnd="@+id/button_create"
        android:layout_alignLeft="@+id/button_create"
        android:layout_alignStart="@+id/button_create" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_popup_sync"
        android:id="@+id/imageButton_refresh"
        android:elevation="3dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@android:drawable/ic_popup_sync" />

</RelativeLayout>
